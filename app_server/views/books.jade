extends layout

block content 
  .row
   .col-md-9.page
     each book in books
       .row.booklist
         .col-md-2
          img(src='#{book.img}')
         .col-md-10
            p
             a(href="/book/#{book._id}")=book.title
             span.close(data-id='#{book._id}') &times;
            p=book.info
            p(rating-stars, rating=book.rating)
            p.tags
             each tag in book.tags
              span=tag

   .col-md-3
     .userinfo
       p stoneniqiu
       a(href='/book/create').btn.btn-info 新增推荐
script(src='/javascripts/books.js')